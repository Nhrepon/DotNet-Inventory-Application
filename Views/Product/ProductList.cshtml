@model List<ProductView>
@{
    Layout = "~/Views/Shared/_Dashboard.cshtml";
    ViewData["Title"] = "ProductList";
}

<h1>@ViewData["Title"]</h1>

<div>
    @if(Model == null || !Model.Any()){
       <h2 class="text-center">No User found.</h2>
    }else{
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Color</th>
                            <th>Size</th>
                            <th>Sku</th>
                            <th>Category</th>
                            <th>Brand</th>
                            <th>User</th>
                            <th>Image</th>
                            <th>Create</th>
                            <th>Update</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var product in Model){
                        <tr>
                            <td>@product.Id</td>
                            <td>@product.Title</td>
                            <td>@product.Description</td>
                            <td>@product.Price</td>
                            <td>@product.Quantity</td>
                            <td>@product.Color</td>
                            <td>@product.Size</td>
                            <td>@product.Sku</td>
                            <td>@product.CategoryName</td>
                            <td>@product.BrandName</td>
                            <td>@product.UserName</td>
                            <td><img src="@product.Image" alt="@product.Title" width="100"></td>
                            <td>@product.CreatedAt.ToString("dd/MMM/yy")</td>
                            <td>@product.UpdatedAt.ToString("dd/MMM/yy")</td>
                            <td><i class="bi bi-pencil-square"></i> <i class="bi bi-trash"></i></td>

                            @* <img class=" rounded" title="" src="" onError="(e)=> e.target.style.display = 'none'"/> *@
                        </tr>
                        }
                    </tbody>
            </table>
            }
</div>